<h1 class="text-center mb-4">Welcome to my todolist app</h1>
<%= render 'layouts/task_form'  %>
<div class="container">
  <ul>
  <% @categories.each do  |category|%>
  <li><%= category.title  %></li>
  <div class="card">
    <ul id="listt">
      <% category.tasks.each do |task|  %>
      <li>
       <%= task.id  %>
        <%= task.title  %>
        
        <% unless task.deadline.nil? %>
          , to read: <%= task.deadline.strftime('%D')  %>
        <% end %>
        <% pommme = true %>
<%= check_box_tag :task, 1, false , data: { remote: true, url: task_path(task), params: {status: true, title: "ok" }.to_param, method: "put" }%>
       
           <%= task.status  %>
        
        <%= link_to "Delete", task_path(task), method: :delete, remote: true %>

      </li>
      <% end %>
    </ul>
  </div>
  <% end %>
  </ul>
</div>

<div class="container">
  <div class="row">
    <% @tasks.each do |task|  %>
      <div class="card col-3">
        <% unless task.image.nil? %>
          <%= image_tag task.image, class: "rounded-circle" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
